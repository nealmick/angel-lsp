{
	"name": "angel-lsp",
	"description": "AngelScript Language Server for VisualStudioCode",
	"version": "1.0.0",
	"author": "sashi0034",
	"license": "MIT",
	"engines": {
		"node": "*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"dependencies": {
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@yao-pkg/pkg": "^6.7.0",
		"esbuild": "^0.25.0",
		"typescript": "^5.0.0"
	},
	"scripts": {
		"test": "mocha",
		"bundle": "npx tsc && npx esbuild src/server.ts --bundle --outfile=angelscript-language-server.js --minify --platform=node",
		"build-exe": "npm run bundle && npx pkg angelscript-language-server.js --targets node18-win-x64 --output angelscript-lsp.exe",
		"build-exe-all": "npm run bundle && npx pkg angelscript-language-server.js --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist"
	}
}
